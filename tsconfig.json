{
    "compilerOptions": {
      /* Visit https://aka.ms/tsconfig.json to read more about this file */
      "target": "ES2021",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
  }